{
    "manifest_version": 2,
    "name": "Word Lookup",
    "version": "1.0.0",
    "icons": {
        "128": "images/icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html",
        "default_title": "Lookup a word definition"
    }
}